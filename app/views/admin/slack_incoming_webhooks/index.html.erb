<% content_for :nav do %>
  <%= render partial: 'partials/admin/nav', locals: { active_nav: 'slack' } %>
<% end %>

<% cache "admin/slack_incoming_webhooks/#{@page}/#{@photoblog.id}/#{@photoblog.updated_at.to_i}" do %>
  <% if @webhooks.size == 0 %>
    <p class="content__message">No webhooks have been installed.</p>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Team</th>
          <th>Channel</th>
          <th>Added</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'webhook', collection: @webhooks %>
      </tbody>
    </table>
    <%= paginate @webhooks %>
  <% end %>
<% end %>

<a class="slack-button" href="https://slack.com/oauth/authorize?scope=incoming-webhook&amp;client_id=<%= @client_id %>&amp;redirect_uri=<%= @redirect_uri %>"><img alt="Add to Slack" height="40" width="139" src="https://platform.slack-edge.com/img/add_to_slack.png" srcset="https://platform.slack-edge.com/img/add_to_slack.png 1x, https://platform.slack-edge.com/img/add_to_slack@2x.png 2x"></a>
