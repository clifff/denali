<% content_for :nav do %>
  <%= render partial: 'partials/admin/nav', locals: { active_nav: 'tags' } %>
<% end %>

<table class="table">
  <thead>
    <tr>
    <th>Tag</th>
    <th>On</th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |t| %>
      <tr>
      <td><%= link_to t.name, admin_tagged_entries_path(t.slug) %></td>
      <td><%= pluralize(Entry.tagged_with(t.name).size, 'item') %></td>
      <td><%= link_to 'Delete', admin_tag_path(t.id), class: 'js-delete-tag', 'data-tag-name': t.name %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @tags %>
