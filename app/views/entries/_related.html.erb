<% cache "entry/related/#{@entry.id}/#{@entry.updated_at.to_i}/#{@photoblog.id}/#{@photoblog.updated_at.to_i}" do %>
  <% if @entry.related.size >= 4 %>
    <h2 class="entry__related">Related Photos You Might Like</h2>
    <div class="entry-list entry-list--related" data-columns>
      <%= render partial: 'entries/entry_list_item', collection: @entry.related, locals: { photo_variation: 'related' } %>
    </div>
  <% end %>
<% end %>
