<p>
  <%= entry.user.name %>
  <% if entry.is_published? %>
    published
  <% elsif entry.is_queued? %>
    queued
  <% elsif entry.is_draft? %>
    drafted
  <% else %>
    updated
  <% end %>

  <% if entry.is_text? %>
    this article
  <% elsif entry.is_photoset? %>
    these photos
  <% elsif entry.is_photo? %>
    this photo
  <% end %>

  <% if entry.is_published? %>
    on <%= link_to entry.published_at.strftime('%B %-d, %Y'), entry.permalink_url %>
  <% elsif entry.is_queued? %>
    for <%= link_to publish_date_for_queued(entry, '%B %-d, %Y'), preview_entry_url(entry.id, entry.slug) %>
  <% else %>
    on <%= link_to entry.updated_at.strftime('%B %-d, %Y'), preview_entry_url(entry.id, entry.slug) %>
  <% end %>
</p>
